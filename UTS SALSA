fun main() {
   var nama = "Andi"
   var lamakerja = "1 tahun"
   var jamkerja = 173
    
   if (lamakerja <= "1 tahun"){
       var gapok = 1486500 
       var tunjangan = 250000 
       
       var total1 = gapok + tunjangan
       
       if(jamkerja > 173){
           var lembur = (jamkerja - 173) * 20000
           var total2 = gapok + tunjangan + lembur
           
           var gajiAkhir = total2 - (total2 * 0.005)
           
           println("Nama Karyawan = " + nama)
           println("Golongan Karyawan = Golongan 1")
           println("Gaji Pokok = " + gapok)
       	   println("Tunjangan = " + tunjangan)
           println("Jam Kerja = " + jamkerja)
           println("Gaji Lembur = " + lembur) 
           println("Gaji Kotor = " + total2)
           println("Pajak = 0.5%")
           println("Gaji Akhir anda adalah " + gajiAkhir)
       } else{
           var gaji = total1 - (total1 * 0.005)
